<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G00348036.SearchByIngredients">
    
    <ContentPage.Content>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Text="SEARCH BY INGREDIENTS" Grid.Row="0" Margin="5"/>
            <ScrollView Grid.Row="1">
                <StackLayout x:Name="slIngredients" Orientation="Vertical" Margin="3, 3, 3, 3">
                    <Button x:Name="btnSearchByIngredient" Text="SEARCH" Margin="1" Style="{StaticResource ButtonStyleFull}" 
                            Command="{Binding LoadRecipePageCommand}" Clicked="BtnSearchByIngredient_Clicked"/>
                </StackLayout>
            </ScrollView>
           
        </Grid>
    </ContentPage.Content>
</ContentPage>