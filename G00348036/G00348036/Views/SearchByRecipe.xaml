<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G00348036.Views.SearchByRecipe">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout x:Name="slMenu" Grid.Row="0" BackgroundColor="LightGray" Margin="0, -6, 0, 0"></StackLayout>

            <Label Text="SEARCH" Grid.Row="1" Margin="5"/>
            <ScrollView Grid.Row="2">
                <StackLayout x:Name="slSearch" Orientation="Vertical" Margin="3, 3, 3, 3">
                    <StackLayout x:Name="slEntries" Orientation="Vertical">
                        <Entry x:Name="entRecipe" HorizontalOptions="FillAndExpand" Placeholder="Enter Your Recipe (Required)"/>
                        <Entry x:Name="entDiet" HorizontalOptions="FillAndExpand" Placeholder="Enter Your Diet (Optional)"/>
                        <Entry x:Name="entExIngredients" HorizontalOptions="FillAndExpand" Placeholder="Exclude Ingredients (Separate by comma)"/>
                        <Entry x:Name="entExIntolerances" HorizontalOptions="FillAndExpand" Placeholder="Exclude Intolerances (Separate by comma)"/>
                    </StackLayout>
                    <Button x:Name="btnSearch" Text="Search" Margin="1" Clicked="BtnSearch_Clicked"/>
                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentPage.Content>
</ContentPage>