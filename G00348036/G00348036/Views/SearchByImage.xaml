<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G00348036.Views.SearchByImage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height=".2*"/>
            </Grid.RowDefinitions>

            <StackLayout x:Name="slMenu" Grid.Row="0" BackgroundColor="LightGray" Margin="0, -6, 0, 0"></StackLayout>

            <Label Text="SEARCH BY IMAGE" Grid.Row="1" Margin="5"/>
            <StackLayout x:Name="slSearch" Grid.Row="2" Orientation="Vertical" Margin="3, 3, 3, 3">
                
                <Button x:Name="btnTakePicture" Text="Take Picture" Margin="1" Clicked="BtnTakePicture_Clicked"/>
            </StackLayout>

            <Image x:Name="PhotoImage" Grid.Row="3"/>
            <Button x:Name="btnSend" Grid.Row="4" Text="Send" Margin="1" Clicked="BtnSend_Clicked" HeightRequest="50"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>