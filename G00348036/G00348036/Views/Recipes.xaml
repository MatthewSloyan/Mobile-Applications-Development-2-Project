<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G00348036.Recipes">

    <!--Global Resources/variables-->
    <ContentPage.Resources>
        <DataTemplate x:Key="RecipeTemplate">
            <ViewCell>
                <StackLayout Margin="2, 1, 2, 1" BackgroundColor="LightGray">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Breed"/>
                        <Label Text="{Binding Path=title}"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding image}" HorizontalOptions="FillAndExpand" Aspect="Fill"></Image>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Count"/>
                        <Label Text="{Binding Path=usedIngredientCount}"/>
                    </StackLayout>
                </StackLayout>
            </ViewCell>
        </DataTemplate>

        <!--<Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="FontSize" Value="Small"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="BackgroundColor" Value="Aqua"/>
            <Setter Property="Margin" Value="2"/>
        </Style>-->
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--<Label Text="Dog Info!" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" HorizontalOptions="Center"/>-->

            <ListView x:Name="lvRecipes" Grid.Row="1" Margin="2, 2, 2, 2" 
                      ItemsSource="{Binding Results, Mode=TwoWay}" ItemTemplate="{StaticResource RecipeTemplate}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>